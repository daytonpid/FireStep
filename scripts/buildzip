#! /bin/bash

echo "SCRIPT	: buildzip"
echo "HELP	: build zip file for Arduino installation"

rm -rf ziptmp
mkdir -p ziptmp/image/libraries
mkdir -p ziptmp/image/FireStep

pushd ../ph5 >& /dev/null
scripts/buildzip
popd >& /dev/null
mv ../ph5*.zip ziptmp
pushd ArduinoJson >& /dev/null
scripts/buildzip
popd >& /dev/null
mv ArduinoJson*.zip ziptmp

TAG=`git log --pretty=format:'%H' -n 1`
OUTPUT="FireStep-$TAG.zip"
echo "CMD	: creating $OUTPUT"

cp -r DueTimer/ ziptmp/image/libraries
rm -rf ziptmp/image/libraries/DueTimer/.git
cp -r FireStep/ ziptmp/image/FireStep
rm -rf ziptmp/image/FireStep/FireStep/Arm
cp CHANGELOG.md LICENSE README.md ziptmp/image/FireStep
cp target/git_tag.h ziptmp/image/FireStep/FireStep

pushd ziptmp/image/libraries >& /dev/null
unzip -q ../../ph5*.zip
unzip -q ../../ArduinoJson*.zip
popd >& /dev/null

pushd ziptmp/image >& /dev/null
zip -r -q ../$OUTPUT \
	FireStep \
	libraries
popd >& /dev/null
